<MudBreadcrumbs Items="_items" Class="custom-breadcrumbs"></MudBreadcrumbs>

@code {
    private List<BreadcrumbItem> _items =
        [
        new("Home", href: "#", icon: Icons.Material.Filled.Home),
        new("Template", href: "template-dashboard", icon: Icons.Material.Filled.Category),
        new("About", href: null, disabled: true, icon: Icons.Material.Filled.Error)
    ];
}

<style>
    .custom-breadcrumbs {
        color: blueviolet;
    }

        /* Default text and icon color */
        .custom-breadcrumbs a,
        .custom-breadcrumbs svg {
            color: gray !important;
            fill: gray !important;
            transition: color 0.2s ease, fill 0.2s ease;
        }

        /* When hovering over the entire breadcrumb item */
        .custom-breadcrumbs .mud-breadcrumb-item:hover a,
        .custom-breadcrumbs .mud-breadcrumb-item:hover svg {
            color: aliceblue !important;
            fill: aliceblue !important;
        }

        /* Active state */
        .custom-breadcrumbs .mud-breadcrumb-item:active a,
        .custom-breadcrumbs .mud-breadcrumb-item:active svg {
            color: deeppink !important;
            fill: deeppink !important;
        }

        /* Focus state */
        .custom-breadcrumbs .mud-breadcrumb-item:focus-within a,
        .custom-breadcrumbs .mud-breadcrumb-item:focus-within svg {
            color: aliceblue !important;
            fill: aliceblue !important;
            text-decoration: none !important;
        }
</style>
