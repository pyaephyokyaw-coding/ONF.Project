
<MudText Align="Align.Center" Typo="Typo.h4" Class="fw-bold"><u>10 Popular Resume Template Design Styles</u></MudText>

@foreach (var group in ImageList)
{
    <MudGrid Justify="Justify.Center" AlignItems="AlignItems.Center" Style="margin:0; padding:20px;">
        @foreach (var item in group)
        {
            <MudItem Style="flex: 0 0 20%; display:flex; flex-direction:column; align-items:center; margin:0; padding:10px;">
                <MudImage Src="@item.ImageUrl"
                          Alt="@item.Name"
                          Style="width:250px; height:300px; border-radius:10px; object-fit:cover;" />
                <MudText Typo="Typo.subtitle2" Align="Align.Center">@item.Name</MudText>
            </MudItem>
        }
    </MudGrid>
}

